# 이 파일은 예시입니다. 실제 secret.yaml 파일은 Git에 포함하지 마세요!
# EC2에서 다음 명령어로 Secret을 생성하세요:
#
# kubectl create secret generic smw-db-secret \
#   --from-literal=url='jdbc:log4jdbc:postgresql://YOUR_DB_HOST:YOUR_DB_PORT/YOUR_DB_NAME' \
#   --from-literal=username='YOUR_DB_USERNAME' \
#   --from-literal=password='YOUR_DB_PASSWORD' \
#   --dry-run=client -o yaml > k8s/secret.yaml
#
# 또는 base64로 인코딩하여 직접 생성:
# echo -n 'jdbc:log4jdbc:postgresql://YOUR_DB_HOST:YOUR_DB_PORT/YOUR_DB_NAME' | base64
# echo -n 'YOUR_DB_USERNAME' | base64
# echo -n 'YOUR_DB_PASSWORD' | base64
#
# 실제 값은 다음을 참고하세요:
# - YOUR_DB_HOST: 데이터베이스 호스트 주소
# - YOUR_DB_PORT: 데이터베이스 포트 번호
# - YOUR_DB_NAME: 데이터베이스 이름
# - YOUR_DB_USERNAME: 데이터베이스 사용자명
# - YOUR_DB_PASSWORD: 데이터베이스 비밀번호

apiVersion: v1
kind: Secret
metadata:
  name: smw-db-secret
type: Opaque
data:
  # base64 인코딩된 값들 (실제 값은 위 명령어로 생성)
  url: <base64-encoded-url>
  username: <base64-encoded-username>
  password: <base64-encoded-password>
